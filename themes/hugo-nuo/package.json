{
  "name": "hugo-nuo",
  "version": "1.0.0",
  "description": "An elegant hand-crafted hugo blog theme.",
  "main": "src/index.js",
  "repository": "https://github.com/laozhu/hugo-nuo",
  "author": {
    "name": "Ritchie Zhu",
    "email": "laozhu.me@gmail.com",
    "url": "https://laozhu.me"
  },
  "license": "MIT",
  "scripts": {
    "start": "yarn clean && yarn build",
    "dev": "cross-env NODE_ENV=development webpack -w --bail",
    "build": "cross-env NODE_ENV=production webpack --bail",
    "eslint": "eslint src webpack.config.js --cache && exit 0",
    "eslint:fix": "eslint src webpack.config.js --cache --fix && exit 0",
    "stylelint": "stylelint 'src/**/*.css' && exit 0",
    "stylelint:fix": "stylelint 'src/**/*.css' --fix && exit 0",
    "imagemin": "open -a ImageOptim ./src/{images,assets}",
    "clean": "rimraf static .eslintcache npm-debug.log yarn-error.log"
  },
  "engines": {
    "node": ">= 9.0.0",
    "npm": ">=5.0.0",
    "yarn": ">= 1.6.0"
  },
  "browserslist": [
    "defaults"
  ],
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "loose": true,
          "debug": false,
          "modules": false,
          "useBuiltIns": false
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-normalize": {},
      "rucksack-css": {},
      "postcss-cssnext": {},
      "css-mqpacker": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": [
      "airbnb-base",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "rules": {
      "no-console": 0,
      "compat/compat": "error"
    },
    "plugins": [
      "compat",
      "import"
    ]
  },
  "eslintIgnore": [
    "static"
  ],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-concentric-order"
    ],
    "plugins": [
      "stylelint-order",
      "stylelint-no-unsupported-browser-features"
    ],
    "rules": {
      "order/order": [
        "dollar-variables",
        "custom-properties",
        "declarations",
        "rules",
        "at-rules"
      ],
      "plugin/no-unsupported-browser-features": [
        true,
        {
          "ignore": []
        }
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.14.2",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.14.2",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "copy-webpack-plugin": "8.1.1",
    "cross-env": "7.0.3",
    "css-loader": "5.2.4",
    "css-mqpacker": "7.0.0",
    "eslint": "7.26.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-compat": "3.9.0",
    "eslint-plugin-import": "2.23.0",
    "file-loader": "6.2.0",
    "mini-css-extract-plugin": "1.6.0",
    "postcss": "8.2.15",
    "postcss-cssnext": "3.1.0",
    "postcss-import": "14.0.2",
    "postcss-load-config": "3.0.1",
    "postcss-loader": "5.3.0",
    "postcss-normalize": "10.0.0",
    "prettier": "^2.3.0",
    "rimraf": "3.0.2",
    "rucksack-css": "1.0.2",
    "style-loader": "2.0.0",
    "stylelint": "13.13.1",
    "stylelint-config-concentric-order": "4.0.1",
    "stylelint-config-standard": "22.0.0",
    "stylelint-no-unsupported-browser-features": "4.1.4",
    "stylelint-order": "4.1.0",
    "svg-url-loader": "7.1.1",
    "url-loader": "4.1.1",
    "webpack": "5.76.0",
    "webpack-cli": "4.7.0",
    "webpack-manifest-plugin": "3.1.1"
  },
  "dependencies": {
    "object-fit-images": "^3.2.4",
    "smooth-scroll": "^16.1.3"
  }
}
